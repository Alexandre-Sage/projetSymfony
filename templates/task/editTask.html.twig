{%extends "/project/index.html.twig"%}
{% block link %}
    <link rel="stylesheet" href="/css/addProject.css">
{% endblock %}
{% block header %}
    <h1>Tache a modifier: {{task.getName}} du projet: {{project.getName}}</h1>

{% endblock %}

{% block main %}
    {% for errors in app.flashes("error") %}
        {% for error in errors %}
            <p class="errorMessage">{{error.message}}</p>
        {% endfor %}
    {% endfor %}
    {% if task %}
        <form class="projectCreationForm" action="/project/{{project.getId}}/task/{{task.getId}}/edit/save" method="post">
            <label for="taskName" value="{{task.getName}}">Nom de la tache</label>
            <input type="text" name="taskName" value="{{task.getName}}"/>
            <label for="taskDescription">Description de la tache</label>
            <input type="text" name="taskDescription" value="{{task.getDescription}}"/>
            <div class="dateContainer">
                <label for="taskStartingDate">Date de d√©but</label>
                <input class="dateInput" type="date" name="taskStartingDate"/>
                <label for="taskEndingDate">Date de fin</label>
                <input class="dateInput" type="date" name="taskEndingDate"/>
            </div>

            <button class="btn-linear-flat" type="submit" name="button">Modifier</button>
        </form>
    {% endif %}
{% endblock %}
