{% extends "/users/index.html.twig"%}
{% block link %}
    <link rel="stylesheet" href="/css/userAdd.css">
{% endblock %}
{% block header %}
    <h1>Modifier utilisateur</h1>
{% endblock %}
{% block main %}
    {% for errors in app.flashes("error") %}
        {% for error in errors %}
            <p class="errorMessage">{{error.message}}</p>
        {% endfor %}
    {% endfor %}

    <form class="userAddForm" action="/users/edit/save/{{utilisateur.getId}}" method="post">
        <div class="formDiv">
            <label for="firstName">Nom</label>
            <input class="userAddInput" type="text" name="firstName" value="{{utilisateur.getFirstName}}">
        </div>
        <div class="formDiv">
            <label for="lastName">Pr√©nom</label>
            <input type="text" name="lastName" value="{{utilisateur.getLastName}}">
        </div>
        <div class="formDiv">
            <label for="email">Email</label>
            <input type="text" name="email" value="{{utilisateur.getEmail}}">
        </div>
        <button type="submit" class="btn-linear-flat" name="button">Modifier Utilisateur</button>
    </form>
{% endblock %}
