<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Benvenido</title>
    </head>
    <body>
        <header>
            {% block header %}
                <h1>Gestionaire de projets</h1>
                <nav>
                    <ul>
                        <li><a href="/users/add/">Ajouter un utilisateur</a></li>
                        <li><a href="/project">Manager les Projets</a></li>
                    </ul>
                </nav>
            {% endblock %}
        </header>
        <main>
            {% block main %}
                {% if users %}
                    {% for user in users %}
                        <div class="userContainer">
                            <h3 class="userName">{{user.getFirstName}}</h3>
                            <p class="userLastName">{{user.getLastName}}</p>
                            <p class="userEmail">{{user.getEmail}}</p>
                            <a href="/users/edit/{{user.getId}}">Modifier l'utilisateur {{user.getFirstName}}{{user.getLastName}}</a>
                            <form action="/users/delete/{{user.getId}}" method="post">
                                <button type="submit" name="button">Supprimer utilisateur</button>
                            </form>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endblock %}
        </main>
    </body>
</html>
