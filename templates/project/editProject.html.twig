{%extends "/project/index.html.twig"%}
{% block link %}
    <link rel="stylesheet" href="/css/addProject.css">
{% endblock %}
{% block header %}
    <h1>Modifier Projet</h1>
{% endblock %}

{% block main %}
    {% for errors in app.flashes("error") %}
        {% for error in errors %}
            <p class="errorMessage">{{error.message}}</p>
        {% endfor %}
    {% endfor %}
    {% if project %}
        <form class="projectCreationForm" action="/project/edit/save/{{project.getId}}" method="post">
            <label for="projectName">Nom du projet: </label>
            <input type="text" name="projectName" value="{{project.getName}}">

            <label for="description">Description du projet: </label>
            <input type="text-area" name="description" value="{{project.getDescription}}"/>

            <p>Date de d√©but actuelle: {{project.getStartDate|date("d M Y")}}</p>
            <p>Date de fin actuelle: {{project.getEndDate|date("d M Y")}}</p>
            <div class="dateContainer">
                <label for="startDate">Nouvelle date de debut</label>
                <input class="dateInput" type="date" name="startDate"/>


                <label for="endDate">Nouvelle date de fin</label>
                <input class="dateInput" type="date" name="endDate" />
            </div>
            <button class="btn-linear-flat" type="submit" name="button">Ajout du projet</button>
        </form>
    {% endif %}
{% endblock %}
