{%extends "/project/index.html.twig"%}
{%block header%}
    <h1>Modifier Projet</h1>
{%endblock%}

{%block main%}
    {%if project%}
        <form class="" action="/project/edit/save/{{project.getId}}" method="post">
            <label for="projectName">Nom du projet: </label>
            <input type="text" name="projectName" value="{{project.getName}}">

            <label for="description">Description du projet: </label>
            <input type="text-area" name="description" value="{{project.getDescription}}"/>

            <p>Date de d√©but actuelle: {{project.getStartDate|date("d M Y")}}</p>
            <label for="startDate">Nouvelle date de debut</label>
            <input type="date" name="startDate"/>

            <p>Date de fin actuelle: {{project.getEndDate|date("d M Y")}}</p>
            <label for="endDate">Nouvelle date de fin</label>
            <input type="date" name="endDate" />

            <button type="submit" name="button">Ajout du projet</button>
        </form>
    {%endif%}
{%endblock%}
