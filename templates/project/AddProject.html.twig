{%extends "/project/index.html.twig"%}
{%block header%}
    <h2>Ajouter Projet</h2>
{%endblock%}
{%block main%}
    <form class="" action="/project/save" method="post">
    {%if users%}
        <select class="usersSelector" name="userName">
        {%for user in users%}
            <option value="{{user.getId}}">{{user.getFirstName}}{{user.getLastName}}</option>
        {%endfor%}
        </select>
    {%endif%}
        <label for="projectName">Nom du projet</label>
        <input type="text" name="projectName" value="">

        <label for="description">Description du projet</label>
        <input type="text-area" name="description"/>

        <label for="startDate">Date de debut</label>
        <input type="text" name="startDate"/>

        <label for="endDate">Date de fin</label>
        <input type="text" name="endDate"/>

        <button type="submit" name="button">Ajout du projet</button>
    </form>
{%endblock%}
